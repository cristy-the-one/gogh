<brushes>
    <brushgroup name="Brushes">
        <brush name="Pencil">
            <default-pen/>
            <width min="1" max="4"/>
        </brush>
        <brush name="Bolder Pencil">
            <width min="1" max="4"/>
            <opacity min="0.5" max="1"/>
        </brush>
        <brush name="Wide">
            <width min="20" max="25"/>        
            <step value="3"/>
        </brush>
    </brushgroup>
    <brushgroup name="Smudge Brushes">
        <brush name="Smudge Brush">
            <width min="8" max="10"/>
            <type>smudge</type>  
       </brush>
    </brushgroup>
    <brushgroup name="Erasers">
        <brush name="Eraser" default_eraser="true">
            <default-eraser/>
            <width min="5" max="8"/>      
            <type>eraser</type>  
        </brush>
    </brushgroup>
</brushes>
